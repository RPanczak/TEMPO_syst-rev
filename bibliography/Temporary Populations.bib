  year = {2016},
  pages = {1--10},
  file = {C:\\Users\\uqrpancz\\Zotero\\storage\\HPRHQLQI\\zu Erbach-Schoenberg et al. - 2016 - Dynamic denominators The impact of seasonally var.pdf;C:\\Users\\uqrpancz\\Zotero\\storage\\N6JQPGYV\\supplement.pdf},
